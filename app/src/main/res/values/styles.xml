<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/GridButtons</item>
    </style>

    <style name="GridButtons">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:maxButtonHeight">8dp</item>
        <item name="android:layout_columnWeight">0.25</item>
        <!--<item name="android:layout_width">100dp</item>
        <item name="android:layout_weight">0.29</item>-->
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal|bold|italic</item>
        <item name="android:layout_gravity">center|center_vertical</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

</resources>
